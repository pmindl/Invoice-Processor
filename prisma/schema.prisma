generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Invoice {
  id              String   @id @default(cuid())
  status          String   @default("PENDING") // PENDING, EXPORTED, EXPORT_ERROR, SKIPPED, DUPLICATE
  company         String   // firma_a, firma_b
  supplierName    String
  supplierIco     String?
  supplierDic     String?
  invoiceNumber   String
  variableSymbol  String?
  dateIssued      String?
  dateDue         String?
  total           Float
  currency        String   @default("CZK")
  sourceType      String   // EMAIL, URL, UPLOAD, GDRIVE
  sourceFileId    String
  sourceFileName  String
  externalId      String?
  rawJson         String
  errorMessage    String?
  confidence      Int      @default(0)
  processedAt     DateTime @default(now())
  exportedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([supplierIco, invoiceNumber])
  @@index([status])
  @@index([company])
}
